<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/BidOfferDialogTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Actually price : "
        android:layout_marginTop="10dp"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        />
    <EditText
        android:id="@+id/BidOfferDialogEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BidOfferDialogTextView"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="@string/bidTheOfferDialogYourPrice"
        android:gravity="center"
        android:textColor="@color/textColor"
        android:inputType="numberSigned"
        android:textSize="25sp"
        />
    <Button
        android:id="@+id/BidOfferDialogButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BidOfferDialogEditText"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:text="@string/bidTheOfferDialogButton"


        android:textSize="20sp"
        android:textColor="#000000"
        android:background="@drawable/buttons_background"
        android:shadowColor="#FFFFFF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        />

</RelativeLayout>