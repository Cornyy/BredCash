<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

 <TextView
     android:id="@+id/accountFragmentNick"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="50dp"
     android:layout_centerHorizontal="true"
     android:textColor="@color/textColor"
     android:textSize="30sp"
     />
 <TextView
     android:id="@+id/accountFragmentAmount"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="40dp"
     android:layout_centerHorizontal="true"
     android:layout_below="@+id/accountFragmentNick"
     android:textColor="@color/textColor"
     android:textSize="30sp"
     />

 <Button
  android:id="@+id/accountFragmentTopUpAccount"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="40dp"
     android:layout_below="@+id/accountFragmentAmount"
     android:layout_centerHorizontal="true"
     android:layout_marginBottom="40dp"
     android:text="@string/TopUpAccount"


     android:textSize="20sp"
     android:textColor="#000000"
     android:background="@drawable/buttons_background"
     android:shadowColor="#FFFFFF"
     android:shadowDx="0"
     android:shadowDy="0"
     android:shadowRadius="5"
  />
</RelativeLayout>