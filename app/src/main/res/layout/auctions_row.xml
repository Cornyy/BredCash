<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/Auction_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/no_image"
        />
    <TextView
        android:id="@+id/Auction_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Auction_image"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textColor="@color/textColor"
        android:text="Xbox 360"
        android:maxLength="20"
        />
    <TextView
        android:id="@+id/Auction_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Auction_image"
        android:layout_below="@+id/Auction_title"
        android:text="22-05-1998"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"
        android:textColor="@color/textColor"
        />
    <TextView
        android:id="@+id/Auction_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Auction_title"
        android:layout_toRightOf="@+id/Auction_date"
        android:layout_marginTop="20sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:text="1000zÅ‚"
        android:textSize="30sp"
        android:textColor="@color/textColor"
        />


</RelativeLayout>